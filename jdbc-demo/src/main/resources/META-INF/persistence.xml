<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="myJpaUnit" transaction-type="RESOURCE_LOCAL">

        <!-- Hibernate as the JPA provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Your entity classes -->
        <class>org.example.UserClassHibernate</class>
        <!-- Add more entities here -->
        <!-- <class>org.example.Order</class> -->

        <properties>

            <!-- Database Connection -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/myappdb?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="appuser"/>
            <property name="jakarta.persistence.jdbc.password" value="AppPass123!"/>

            <!-- Hibernate Dialect -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <!-- DDL Auto -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Show SQL in console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Recommended settings -->
            <property name="hibernate.current_session_context_class" value="thread"/>
            <property name="hibernate.jdbc.time_zone" value="UTC"/>

        </properties>
    </persistence-unit>

</persistence>
